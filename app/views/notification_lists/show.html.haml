- model_class = NotificationList
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @notification_list.name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @notification_list.email
%p
  %strong= model_class.human_attribute_name(:phno) + ':'
  %br
  = @notification_list.phno


= link_to t('.back', :default => t("helpers.links.back")), notification_lists_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_notification_list_path(@notification_list), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), notification_list_path(@notification_list), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
