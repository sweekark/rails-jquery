<%= simple_form_for @payment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :amount %>
  <%= error_span(@payment[:amount]) %>
  <%= f.input :cardType %>
  <%= error_span(@payment[:cardType]) %>
  <%= f.input :amountReceived %>
  <%= error_span(@payment[:amountReceived]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payments_path, :class => 'btn btn-default' %>
<% end %>
