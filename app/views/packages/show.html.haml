- model_class = Package
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @package.name
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @package.type


= link_to t('.back', :default => t("helpers.links.back")), packages_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_package_path(@package), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), package_path(@package), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
