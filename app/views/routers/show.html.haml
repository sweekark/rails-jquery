- model_class = Router
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @router.name
%p
  %strong= model_class.human_attribute_name(:macid) + ':'
  %br
  = @router.macid
%p
  %strong= model_class.human_attribute_name(:store_id) + ':'
  %br
  = @router.store_id


= link_to t('.back', :default => t("helpers.links.back")), routers_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_router_path(@router), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), router_path(@router), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
