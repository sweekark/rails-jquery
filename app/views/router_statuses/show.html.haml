- model_class = RouterStatus
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:router_id) + ':'
  %br
  = @router_status.router_id
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @router_status.status
%p
  %strong= model_class.human_attribute_name(:time) + ':'
  %br
  = @router_status.time
%p
  %strong= model_class.human_attribute_name(:macid) + ':'
  %br
  = @router_status.macid


= link_to t('.back', :default => t("helpers.links.back")), router_statuses_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_router_status_path(@router_status), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), router_status_path(@router_status), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
